<resources>

    <!--
        Base application theme for API 11+. This theme completely replaces
        AppBaseTheme from res/values/styles.xml on API 11+ devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!-- API 11 theme customizations can go here. -->
        <item name="android:actionBarStyle">@style/action_bar</item>
    </style>

    <style name="action_bar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/action_bar_bg</item>
        <item name="android:displayOptions">useLogo|showTitle</item>
    </style>
    
    <drawable name="action_bar_bg">#ffe27870</drawable>
</resources>
